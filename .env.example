# ==============================================
# PRETIX DOCKER-COMPOSE ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# Required variables have no default value

# ----------------------------------------------
# REQUIRED: Domain Configuration
# ----------------------------------------------
# Your Pretix domain (must match DNS A record)
PRETIX_DOMAIN=pretix.weinerlebnistouren-pfalz.de

# ----------------------------------------------
# REQUIRED: Database Configuration
# ----------------------------------------------
# PostgreSQL password (use a strong, random password)
POSTGRES_PASSWORD=your_secure_database_password_here

# Optional database settings (defaults provided)
POSTGRES_USER=pretix
POSTGRES_DB=pretix

# ----------------------------------------------
# REQUIRED: Mail Configuration
# ----------------------------------------------
# Email address that emails will be sent from
MAIL_FROM=noreply@weinerlebnistouren-pfalz.de

# SMTP server hostname
MAIL_HOST=smtp.example.com

# Optional mail settings
MAIL_USER=
MAIL_PASSWORD=
MAIL_PORT=587
MAIL_TLS=on
MAIL_SSL=off

# ----------------------------------------------
# OPTIONAL: Pretix Instance Configuration
# ----------------------------------------------
# Display name for your Pretix instance
PRETIX_INSTANCE_NAME=Pretix

# Default currency (ISO 4217 code)
PRETIX_CURRENCY=EUR

# Default locale (language code)
PRETIX_LOCALE=de

# Timezone (tz database format)
PRETIX_TIMEZONE=Europe/Berlin
